---
import { useTranslations } from "@/lib/i18n/useTranslations";
import {BookOpenText, NotepadText, ShoppingBag} from "@lucide/astro"

const lang = Astro.currentLocale as "es" | "en" | "de";
const t = useTranslations(lang);

---
<section
  class="bg-gray-50"
>
    <div class="max-w-6xl gap-2 mx-auto flex flex-col items-center px-4 py-30">
        <h3 class="text-2xl font-semibold text-center text-balance max-w-[60ch]">{t("howItWorks.title").split(" ").slice(0, -1).join(" ")} <span class="text-primary">{t("howItWorks.title").split(" ").slice(-1)}</span></h3>
        <p class="text-pretty text-gray-600 text-center">{t("howItWorks.description")}</p>
        <div class="flex flex-col md:flex-row gap-4 md:gap-8 mt-8">
            <div class="flex-1/3 md:flex-1/3 bg-white px-4 py-8 shadow flex flex-col items-center">
                <BookOpenText size={35} class="mb-3 text-secondary" />
                <h4 class="text-xl font-semibold text-center mb-2">{t("howItWorks.chooseYourMeal")}</h4>
                <p class="text-pretty text-gray-600 text-center">{t("howItWorks.chooseYourMeal.description")}</p>
            </div>
            <div class="flex-1/3 bg-white px-4 py-8 shadow flex flex-col items-center">
                <NotepadText size={35} class="mb-3 text-secondary" />
                <h4 class="text-xl font-semibold text-center mb-2">{t("howItWorks.placeYourOrder")}</h4>
                <p class="text-pretty text-gray-600 text-center">{t("howItWorks.placeYourOrder.description")}</p>
            </div>
            <div class="flex-1/3 bg-white px-4 py-8 shadow flex flex-col items-center">
                <ShoppingBag size={35} class="mb-3 text-secondary" />
                <h4 class="text-xl font-semibold text-center mb-2">{t("howItWorks.enjoyYourMeal")}</h4>
                <p class="text-pretty text-gray-600 text-center">{t("howItWorks.enjoyYourMeal.description")}</p>
            </div>
        </div>
    </div>
</section>