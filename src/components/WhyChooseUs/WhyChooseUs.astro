---
import { useTranslations } from "@/lib/i18n/useTranslations";
import {Carrot, CookingPot, Truck} from "@lucide/astro"

const lang = Astro.currentLocale as "es" | "en" | "de";
const t = useTranslations(lang);

---
<section
  class="bg-gray-50"
>
    <div class="max-w-6xl gap-2 mx-auto flex flex-col items-center px-4 py-30">
        <h2 class="text-sm font-bold tracking-tighter bg-primary px-4 py-1 rounded text-white">{t("whyChooseUs.title")}</h2>
        <h3 class="text-2xl font-semibold text-center text-balance max-w-[60ch]">{t("whyChooseUs.subtitle")}</h3>
        <p class="text-pretty text-gray-600 text-center">{t("whyChooseUs.description")}</p>
        <div class="flex flex-col md:flex-row gap-4 md:gap-8 mt-8">
            <div class="flex-1/3 md:flex-1/3 bg-white px-4 py-8 shadow flex flex-col items-center">
                <Carrot size={35} class="mb-3 text-secondary" />
                <h4 class="text-xl font-semibold text-center mb-2">{t("whyChooseUs.freshIngredients")}</h4>
                <p class="text-pretty text-gray-600 text-center">{t("whyChooseUs.freshIngredients.description")}</p>
            </div>
            <div class="flex-1/3 bg-white px-4 py-8 shadow flex flex-col items-center">
                <CookingPot size={35} class="mb-3 text-secondary" />
                <h4 class="text-xl font-semibold text-center mb-2">{t("whyChooseUs.dailyPrepared")}</h4>
                <p class="text-pretty text-gray-600 text-center">{t("whyChooseUs.dailyPrepared.description")}</p>
            </div>
            <div class="flex-1/3 bg-white px-4 py-8 shadow flex flex-col items-center">
                <Truck size={35} class="mb-3 text-secondary" />
                <h4 class="text-xl font-semibold text-center mb-2">{t("whyChooseUs.readyToTakeAway")}</h4>
                <p class="text-pretty text-gray-600 text-center">{t("whyChooseUs.readyToTakeAway.description")}</p>
            </div>
        </div>
    </div>
</section>