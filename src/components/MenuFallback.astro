---
// Fallback UI component for when menu data fails to load
interface Props {
  error?: string;
  showRetry?: boolean;
}

const { error = "Unable to load menu data", showRetry = true } = Astro.props;
---

<div class="p-6 bg-yellow-50 border border-yellow-200 rounded-lg max-w-2xl mx-auto my-8">
  <div class="flex items-center mb-4">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium text-yellow-800">
        Menu Temporarily Unavailable
      </h3>
    </div>
  </div>
  
  <div class="text-sm text-yellow-700 mb-4">
    <p>We're having trouble loading the menu right now.</p>
    <p class="mt-1">Please try refreshing the page or contact us directly for menu information.</p>
  </div>

  <div class="flex flex-col sm:flex-row gap-3">
    {showRetry && (
      <button 
        onclick="window.location.reload()"
        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
      >
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Refresh Page
      </button>
    )}
    
    <a 
      href="tel:+34652640538"
      class="inline-flex items-center px-4 py-2 border border-yellow-300 text-sm font-medium rounded-md text-yellow-700 bg-white hover:bg-yellow-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
    >
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      Call Restaurant
    </a>
  </div>

  <div class="mt-4 p-3 bg-yellow-100 rounded-md">
    <h4 class="text-sm font-medium text-yellow-800 mb-2">Alternative Options:</h4>
    <ul class="text-sm text-yellow-700 space-y-1">
      <li>• Call us at +34 652 640 538 for menu information</li>
      <li>• Visit us in person for the full menu experience</li>
      <li>• Check back in a few minutes - we're working to fix this</li>
    </ul>
  </div>
</div>